<!-- Page Content -->
 <div class="container">

     <!-- Portfolio Item Heading -->
     <div class="row">
         <div class="col-lg-12">
             <h1 class="page-header">Specific Blog Post
             </h1>
         </div>
     </div>
     <!-- /.row -->

     <!-- Portfolio Item Row -->
     <div class="row">
       {{#each post}}
         <div class="col-md-8">
             <img class="img-responsive" src="{{image}}" alt="">
         </div>

         <div class="col-md-4">
             <h3>{{title}}</h3>
             <p>{{des}}</p>

         </div>
         {{/each}}

     </div>

     </div>
